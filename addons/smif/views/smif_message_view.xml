<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="smif_message_view_form" model="ir.ui.view">
    <field name="name">smif.message_view</field>
    <field name="model">smif.message</field>
    <field name="arch" type="xml">
        <form>
            <p class="text-center">
                <field name="message"/>
            </p>
        <footer>
            <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
        </footer>
        </form>
    </field>
</record>
    </data>
</odoo>